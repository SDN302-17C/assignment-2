<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Question Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include ('../commons/header.ejs') %>

    <div class="container mt-5 mb-4 pt-5 pb-5">
        <h1 class="text-center mb-4">Question Details</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= question.text %></h5>
                <p class="card-text"><strong>Options:</strong></p>
                <div class="list-group">
                    <% question.options.forEach(option => { %>
                        <div class="list-group-item list-group-item-action">
                            <%= option %>
                        </div>
                    <% }); %>
                </div>
                <p class="card-text mt-3"><strong>Keywords:</strong></p>
                <div>
                    <% question.keywords.forEach(keyword => { %>
                        <span class="badge badge-primary mr-1 p-2"><%= keyword %></span>
                    <% }); %>
                </div>
                <p class="card-text mt-3"><strong>Correct Answer:</strong></p>
                <div class="list-group-item list-group-item-success">
                    <%= question.options[question.correctAnswerIndex] %>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <a href="/questions" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <div>
                        <a href="/questions/<%= question._id %>/edit" class="btn btn-warning mr-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form action="/questions/<%= question._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include ('../commons/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>